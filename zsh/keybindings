# Binds ctrl + left/right arrow keys to move forward/back one word
bindkey "\e[1;5C" forward-word
bindkey "\e[1;5D" backward-word

# Binds Home/End to move to beginning/end of line
bindkey "^[[H" beginning-of-line
bindkey "^[[F" end-of-line

# Binds ctrl + backspace to erase last word
bindkey '^H' backward-kill-word
