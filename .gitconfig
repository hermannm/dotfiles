[user]
    name = hermannm
    email = hermann.morkrid@gmail.com

[core]
    editor = micro

[init]
    defaultbranch = main

[pull]
    rebase = false

# Sets up GPG signing of commits and tags.
# To set the signing key: sudo git config --system user.signingkey [KEY-ID]
[gpg]
    program = "/usr/bin/gpg"
[commit]
    gpgsign = true
[tag]
    gpgsign = true
[credential]
    credentialStore = gpg
    helper = /usr/local/bin/git-credential-manager
