{
  "editor.formatOnSave": true,
  "editor.rulers": [120],
  "editor.codeLens": false,
  "editor.inlayHints.enabled": "on",
  "editor.minimap.enabled": false,
  "editor.colorDecorators": false,
  "editor.acceptSuggestionOnEnter": "off",
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.suggestSelection": "first",
  "explorer.compactFolders": false,
  "security.workspace.trust.untrustedFiles": "open",
  "workbench.startupEditor": "none",
  "workbench.editor.untitled.hint": "hidden",

  // Theme
  "editor.bracketPairColorization.enabled": false,
  "git-graph.graph.colours": [
    "#b16286",
    "#689d6a",
    "#98971a",
    "#d79921",
    "#d65d0e",
    "#458588",
    "#cc241d",
    "#d3869b",
    "#8ec07c",
    "#b8bb26",
    "#fabd2f",
    "#fe8019",
    "#83a498",
    "#fb4934"
  ],

  // Tabs
  "editor.insertSpaces": true,
  "editor.detectIndentation": true,
  "editor.tabSize": 4,
  "[html][xml][css][json][jsonc][yaml][yml][javascript][javascriptreact][typescript][typescriptreact][markdown]": {
    "editor.tabSize": 2
  },

  // Font
  "editor.fontFamily": "Consolas, 'Courier New', monospace",
  "editor.fontSize": 14,
  "editor.semanticHighlighting.enabled": true,
  "workbench.iconTheme": "gruvbox-material-icon-theme",
  "material-icon-theme.folders.theme": "none",
  "workbench.tree.indent": 12,

  // Terminal
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.fontSize": 14,
  "terminal.explorerKind": "external",

  // Go
  "[go][go.mod][go.sum]": {
    "editor.insertSpaces": false
  },
  "go.enableCodeLens": {
    "runtest": false
  },
  "gopls": {
    "ui.semanticTokens": true
  },
  "go.toolsManagement.autoUpdate": true,

  // Rust
  "rust-analyzer.semanticHighlighting.operator.enable": false,
  "rust-analyzer.inlayHints.closingBraceHints.enable": false,
  "rust-analyzer.inlayHints.bindingModeHints.enable": true,
  "rust-analyzer.inlayHints.closureReturnTypeHints.enable": "always",
  "rust-analyzer.inlayHints.parameterHints.enable": false,

  // HTML/JavaScript/TypeScript
  "html.autoClosingTags": false,
  "javascript.autoClosingTags": false,
  "typescript.autoClosingTags": false,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "[html][css][json][jsonc][yaml][javascript][javascriptreact][typescript][typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "prettier.printWidth": 120,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },

  // Python
  "python.formatting.provider": "black",
  "python.formatting.blackArgs": ["--line-length", "120"],
  "python.linting.enabled": true,
  "python.linting.flake8Enabled": true,
  "python.linting.flake8Args": ["--max-line-length=120"],
  "[python]": {
    "editor.defaultFormatter": null
  },

  // Notebooks
  "notebook.cellToolbarLocation": {
    "default": "right",
    "jupyter-notebook": "left"
  },
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter-notebook"
  },
  "notebook.markup.fontSize": 14,

  // Markdown
  "markdown.preview.scrollEditorWithPreview": false,
  "emmet.excludeLanguages": ["markdown"],
  "mdmath.style": "file://c:/users/hermannm/drive/misc/markdown_math_style.css",
  "mdmath.autosave": true,

  // Settings Cycler extension config
  "settings.cycle": [
    {
      "id": "inlayHints",
      "values": [{ "editor.inlayHints.enabled": "on" }, { "editor.inlayHints.enabled": "off" }]
    },
    {
      "id": "errorLens",
      "values": [{ "errorLens.enabled": true }, { "errorLens.enabled": false }]
    }
  ],

  // ErrorLens extension settings
  "errorLens.enabled": false,
  "errorLens.enabledDiagnosticLevels": ["error", "warning", "info", "hint"],
  "workbench.colorCustomizations": {
    "errorLens.errorForeground": "#fb4934",
    "errorLens.warningForeground": "#fabd2f",
    "errorLens.infoForeground": "#83a598",
    "errorLens.hintForeground": "#83a598"
  },

  // GitLens extension settings
  "gitlens.showWhatsNewAfterUpgrades": false,
  "gitlens.currentLine.enabled": false,
  "gitlens.currentLine.pullRequests.enabled": false,
  "gitlens.currentLine.scrollable": false,
  "gitlens.codeLens.authors.enabled": false,
  "gitlens.codeLens.enabled": false,
  "gitlens.codeLens.recentChange.enabled": false,
  "gitlens.statusBar.pullRequests.enabled": false,
  "gitlens.hovers.annotations.changes": false,
  "gitlens.hovers.annotations.details": false,
  "gitlens.hovers.annotations.enabled": false,
  "gitlens.hovers.avatars": false,
  "gitlens.hovers.currentLine.changes": false,
  "gitlens.hovers.currentLine.details": false,
  "gitlens.hovers.currentLine.enabled": false,
  "gitlens.hovers.enabled": false,
  "gitlens.hovers.pullRequests.enabled": false,
  "gitlens.views.commits.files.compact": false,
  "gitlens.views.commits.pullRequests.enabled": false,
  "gitlens.views.commits.pullRequests.showForBranches": false,
  "gitlens.views.commits.pullRequests.showForCommits": false,
  "gitlens.views.formats.commits.label": "${[tips] }${message}",
  "gitlens.menus": {
    "editor": {
      "blame": false,
      "clipboard": true,
      "compare": true,
      "history": false,
      "remote": false
    },
    "editorGroup": false,
    "editorTab": {
      "clipboard": true,
      "compare": true,
      "history": true,
      "remote": true
    },
    "explorer": {
      "clipboard": true,
      "compare": true,
      "history": true,
      "remote": true
    },
    "scm": {
      "authors": true
    },
    "scmGroupInline": {
      "stash": true
    },
    "scmGroup": {
      "compare": true,
      "openClose": true,
      "stash": true
    },
    "scmItem": {
      "clipboard": true,
      "compare": true,
      "history": true,
      "remote": false,
      "stash": true
    }
  },

  // Misc
  "diffEditor.ignoreTrimWhitespace": false,
  "files.associations": { "*.svg": "html" },
  "githubPullRequests.pullBranch": "never",
  "workbench.editor.enablePreview": false,
  "workbench.colorTheme": "gruvbox-plain-cold"
}
